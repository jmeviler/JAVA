<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="xyz.onesway.bean.Home" table="info_home">
        <id name="homeId" type="int">            
            <generator class="identity" />
        </id>
        <property name="deviceid" type="int"/>
        <property name="sensorid" type="int"/>
        <property name="actuatorid" type="int"/>
        <property name="states" type="int"/>
        <property name="location" type="string"/>
        <property name="home_entity" type="string"/>
        <property name="taskid" type="int"/>
        
    </class>
</hibernate-mapping>
